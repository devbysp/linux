#!/bin/bash

echo "Please choose the installation profile:"

options=("Customizable" "Zolt치n" "Zolt치n (virtual box)" "Quit")

select choice in "${options[@]}"; do
    case $choice in
        "Customizable")
            profile=customizable
            break
            ;;
        "Zolt치n")
            profile=zoltan
            break
            ;;
        "Zolt치n (virtual box)")
            profile=zoltan-vb
            break
            ;;
        "Quit")
            echo "Exiting..."
            break
            ;;
        *)
            echo "Invalid option. Please try again."
            ;;
    esac
done

if [[ $choice != "Quit" ]]; then
  source ./profiles/"$profile"
fi
