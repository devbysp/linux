#!/bin/bash

# ------------------------------------------------------------------------------
# Imports
# ------------------------------------------------------------------------------

source ../.common/configure

# ------------------------------------------------------------------------------
# Setup 
# ------------------------------------------------------------------------------

configure_globals

if [[ $LINUX == "arch" ]]; then
  echo -e "o\nn\n\n\n\n\na\nw\n" | fdisk /dev/sda
  mkfs.ext4 /dev/sda1
fi
